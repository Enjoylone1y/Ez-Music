<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/color_gray">

        <ImageView
            android:id="@+id/mIvHeadBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/mIvHeadCover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/splash"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/mTvHeadTip"
            android:layout_toRightOf="@+id/mIvHeadCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:text="@string/tv_recom_bill"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@mipmap/ic_winner"
            android:drawablePadding="5dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/arrow_right"
            android:layout_toRightOf="@+id/mTvHeadTip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/mTvHeadTitle"
            android:layout_toRightOf="@+id/mIvHeadCover"
            android:layout_below="@+id/mTvHeadTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:maxWidth="200dp"/>

        <TextView
            android:id="@+id/mTvHeadDes"
            android:layout_toRightOf="@+id/mIvHeadCover"
            android:layout_below="@+id/mTvHeadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_light_gray"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:maxWidth="200dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_coner"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/mTvTagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_all_gedan"
                android:textSize="12sp"
                android:textColor="@color/color_black"/>

            <ImageView
                android:layout_toRightOf="@+id/mTvTagName"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/mTvTagFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="驾驶"
                android:textColor="@color/color_light_black"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/mTvTagSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="欧美"
                android:textColor="@color/color_light_black"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/mTvTagThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="流行"
                android:textColor="@color/color_light_black"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>

        </RadioGroup>

    </RelativeLayout>

</LinearLayout>