<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/layout_sort"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="clip_vertical">

        <ImageView
            android:id="@+id/iv_list_sort"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/list_recycle_g"/>

        <TextView
            android:id="@+id/tv_list_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/tv_list_recycle"
            android:textColor="@color/color_black"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/delete"/>

    <View
        android:id="@+id/view_decoration"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/layout_sort"
        android:layout_marginTop="5dp"
        android:background="@color/color_light_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_playing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_decoration"/>

</RelativeLayout>